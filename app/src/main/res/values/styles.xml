<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BannerCardViewStyle">
        <item name="cardCornerRadius">@dimen/dimen_5dp</item>
        <item name="cardElevation">@dimen/dimen_5dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_8dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8dp</item>
        <item name="android:layout_height">@dimen/dimen_200dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="MainCardViewStyle">
        <item name="cardCornerRadius">@dimen/dimen_5dp</item>
        <item name="cardElevation">@dimen/dimen_5dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_8dp</item>
        <item name="android:layout_height">@dimen/dimen_110dp</item>
        <item name="android:layout_width">@dimen/dimen_110dp</item>
    </style>

</resources>