<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="displayOptions">showHome|useLogo</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
    </style>

    <style name="BaseCardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/dimen_5dp</item>
        <item name="elevation">5dp</item>
    </style>

    <style name="BannerCardViewStyle" parent="BaseCardView">
        <item name="android:layout_marginStart">@dimen/dimen_8dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8dp</item>
        <item name="android:layout_height">@dimen/dimen_200dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MainCardViewStyle" parent="BaseCardView">
        <item name="android:layout_marginStart">@dimen/dimen_8dp</item>
        <item name="android:layout_height">@dimen/dimen_100dp</item>
        <item name="android:layout_width">@dimen/dimen_100dp</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_height">@dimen/dimen_30dp</item>
        <item name="android:layout_width">@dimen/dimen_107dp</item>
    </style>

    <style name="AppCompatTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textColor">@color/sunBlackColor</item>
    </style>

    <style name="AppCompatTextViewGray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/gray_textColor</item>
    </style>

    <style name="TextOutlined">
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_10dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_10dp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="hintEnabled">false</item>
        <item name='boxStrokeWidth'>1dp</item>
        <item name="android:background">@color/white</item>
        <item name="boxStrokeColor">@color/secondaryFirst</item>
    </style>

    <style name="BasicButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="BasicMaterialButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/dimen_5dp</item>
        <item name="android:background">@drawable/button_color_selector</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="BasicMaterialButtonMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/dimen_5dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BasicOutlinedMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/dimen_5dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="strokeColor">@color/gray_DA</item>
        <item name="strokeWidth">2dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BasicOutlinedButtonGrayStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/dimen_5dp</item>
        <item name="android:textColor">@color/sunBlackColor</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="strokeColor">@color/white_gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="iconGravity">start</item>
        <item name="iconPadding">@dimen/dimen_16dp</item>
        <item name="iconTint">@color/light_gray</item>

    </style>

    <style name="BasicTextMaterialButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="BasicOutlinedCardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/dimen_5dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/gray_DA</item>
        <item name="cardBackgroundColor">@color/sunlight_background</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="BasicEditText">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textCursorDrawable">@drawable/cursor_style</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/sunLightColor</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textColor">@color/gray_textColor</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BasicTextInputLayoutOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_5dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_5dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_5dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_5dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="BasicTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_5dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_5dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_5dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_5dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="BasicTextInputLayout.Reverse">
        <item name="boxBackgroundColor">@color/sunlight_background</item>
    </style>

    <style name="BasicDropDownInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_5dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_5dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_5dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_5dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/transparent</item>
    </style>

    <style name="BasicDropDownInputLayout.Reverse">
        <item name="boxBackgroundColor">@color/sunlight_background</item>
    </style>

    <style name="BasicDropDownInputLayout.Transparent">
        <item name="boxBackgroundColor">@color/transparent</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="BasicRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/sunBlackColor</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="myDialogError" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_shape</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="FullDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>


</resources>