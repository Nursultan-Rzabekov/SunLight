<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/emailFragment"
    android:id="@+id/navigate_email">

    <fragment android:id="@+id/emailFragment"
        android:name="com.corp.sunlightdesign.ui.screens.email.EmailFragment"
        android:label="@string/home"
        tools:layout="@layout/announcements">

        <action
            android:id="@+id/action_emailFragment_to_emailDetailsActivity"
            app:destination="@id/emailDetailsActivity"
            app:popUpTo="@id/emailFragment" />

    </fragment>


    <activity android:id="@+id/emailDetailsActivity"
        android:name="com.corp.sunlightdesign.ui.screens.email.EmailDetailActivity"
        android:label="@string/home"
        tools:layout="@layout/announcement_detail_item">

    </activity>

</navigation>