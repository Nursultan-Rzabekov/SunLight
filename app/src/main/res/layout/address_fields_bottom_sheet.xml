<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">

    <ImageView
        android:id="@+id/arrow_bottom_sheet_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_16dp"
        android:contentDescription="@string/exit"
        android:src="@drawable/ic_arrow_sheet" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delivery_address"
                android:textAlignment="center"
                android:textColor="@color/sunBlackColor"
                android:textSize="@dimen/dimen_18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delivery_cost_bv_kzt"
                android:textAlignment="center"
                android:textSize="@dimen/dimen_14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/partner"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/partnerInputLayout"
                style="@style/BasicTextInputLayout.Reverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/partnerEditText"
                    style="@style/BasicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/full_name"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/choose_country_two_dots"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/countryDropDown"
                style="@style/BasicDropDownInputLayout.Reverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/countryDropDownTextView"
                    style="@style/AppCompatTextViewGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="@string/choose_country"
                    android:inputType="none"
                    android:labelFor="@id/country_drop_down"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/choose_region_two_dots"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/regionDropDown"
                style="@style/BasicDropDownInputLayout.Reverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/regionDropDownTextView"
                    style="@style/AppCompatTextViewGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="@string/choose_region"
                    android:inputType="none"
                    android:labelFor="@id/country_drop_down"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/choose_city_two_dots"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cityDropDown"
                style="@style/BasicDropDownInputLayout.Reverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/cityDropDownTextView"
                    style="@style/AppCompatTextViewGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="@string/choose_city"
                    android:inputType="none"
                    android:labelFor="@id/country_drop_down"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/fill_street_address"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/streetAddress"
                style="@style/BasicTextInputLayout.Reverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/streetAddressEditText"
                    style="@style/BasicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextBtn"
                style="@style/BasicMaterialButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_58dp"
                android:enabled="true"
                android:paddingTop="@dimen/dimen_12dp"
                android:paddingBottom="@dimen/dimen_12dp"
                android:text="@string/next"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelBtn"
                style="@style/BasicTextMaterialButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/back"
                android:textColor="@color/gray_textColor" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>