<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_16dp">

    <ImageView
        android:contentDescription="@string/exit"
        android:layout_margin="@dimen/dimen_16dp"
        android:id="@+id/arrow_bottom_sheet_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_arrow_sheet"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delivery_address"
        android:textColor="@color/sunBlackColor"
        android:textSize="@dimen/dimen_18sp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/delivery_cost_bv_kzt"
        android:textSize="@dimen/dimen_14sp"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/AppCompatTextViewGray"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:text="@string/choose_country"
        android:textSize="@dimen/dimen_16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/countryDropDown"
        style="@style/BasicDropDownInputLayout.Reverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:hintEnabled="false">

        <AutoCompleteTextView
            android:id="@+id/countryDropDownTextView"
            style="@style/AppCompatTextViewGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="@string/choose_country"
            android:inputType="none"
            android:labelFor="@id/country_drop_down"
            android:paddingTop="@dimen/dimen_12dp"
            android:paddingBottom="@dimen/dimen_12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/AppCompatTextViewGray"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="@string/choose_city"
        android:textSize="@dimen/dimen_16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cityDropDown"
        style="@style/BasicDropDownInputLayout.Reverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:hintEnabled="false">

        <AutoCompleteTextView
            android:id="@+id/cityDropDownTextView"
            style="@style/AppCompatTextViewGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="@string/choose_city"
            android:inputType="none"
            android:labelFor="@id/country_drop_down"
            android:paddingTop="@dimen/dimen_12dp"
            android:paddingBottom="@dimen/dimen_12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/AppCompatTextViewGray"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:text="@string/fill_street_address"
        android:textSize="@dimen/dimen_16sp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/BasicTextInputLayout.Reverse"
        android:id="@+id/streetAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/streetAddressEditText"
            style="@style/BasicEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_12dp"
            android:paddingBottom="@dimen/dimen_12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextBtn"
        style="@style/BasicMaterialButton"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_100dp"
        android:enabled="true"
        android:paddingTop="@dimen/dimen_12dp"
        android:paddingBottom="@dimen/dimen_12dp"
        android:text="@string/next" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelBtn"
        style="@style/BasicTextMaterialButton"
        android:textColor="@color/gray_textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/back" />

</LinearLayout>