<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunlight_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:orientation="vertical">

            <include
                android:id="@+id/sunlight_logo"
                layout="@layout/sunlight_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_8dp" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextView"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/registration_partner" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppCompatTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/step_four"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    style="@style/AppCompatTextViewGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_13dp"
                    android:text="@string/delivery_address"
                    android:textSize="@dimen/dimen_16sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/choose_country_two_dots"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/countryTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@drawable/white_bordered_box"
                android:gravity="center_vertical"
                android:hint="@string/choose_country"
                android:padding="@dimen/dimen_12dp"
                android:textColorHint="@color/gray"
                app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/choose_region_two_dots"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/regionsTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@drawable/white_bordered_box"
                android:gravity="center_vertical"
                android:hint="@string/choose_region"
                android:padding="@dimen/dimen_12dp"
                android:textColorHint="@color/gray"
                app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/choose_city_two_dots"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/citiesTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@drawable/white_bordered_box"
                android:gravity="center_vertical"
                android:hint="@string/choose_city_two_dots"
                android:padding="@dimen/dimen_12dp"
                android:textColorHint="@color/gray"
                app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down" />


            <LinearLayout
                android:id="@+id/deliverServiceTypeLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppCompatTextViewGray"
                    android:text="@string/choose_delivery_service"
                    android:textSize="@dimen/dimen_16sp" />

                <RadioGroup
                    android:id="@+id/deliveryServiceTypeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/deliveryFastenRadioButton"
                        style="@style/BasicRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fasten" />

                    <RadioButton
                        android:id="@+id/deliveryDefaultRadioButton"
                        style="@style/BasicRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:text="@string/basic" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/deliverySectionLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18dp"
                android:orientation="vertical">

                <TextView
                    style="@style/AppCompatTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/available_delivery_type"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dimen_14sp" />

                <LinearLayout
                    android:id="@+id/deliveryTypeLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:orientation="vertical" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_step_four"
                style="@style/BasicMaterialButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:paddingTop="@dimen/dimen_16dp"
                android:paddingBottom="@dimen/dimen_16dp"
                android:text="@string/next"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backBtn"
                style="@style/BasicTextMaterialButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:text="@string/back"
                android:textColor="@color/gray_textColor" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>