<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    app:contentPaddingBottom="@dimen/dimen_24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/success_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_success"
            android:layout_marginTop="@dimen/dimen_32dp"
            app:layout_constraintBottom_toTopOf="@+id/greeting_for_payment_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/greeting_for_payment_tv"
            style="@style/AppCompatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/greeting_for_payment"
            android:textSize="@dimen/dimen_22sp"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintBottom_toTopOf="@+id/send_pass_phone_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/success_icon_iv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/send_pass_phone_tv"
            style="@style/AppCompatTextViewGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_password_was_send_to"
            android:textAlignment="center"
            android:textSize="@dimen/dimen_14sp"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintBottom_toTopOf="@+id/send_again_timer_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greeting_for_payment_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/send_again_timer_tv"
            style="@style/AppCompatTextViewGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_again_after"
            android:textSize="@dimen/dimen_14sp"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_goneMarginTop="@dimen/dimen_0dp"
            app:layout_constraintBottom_toTopOf="@+id/send_again"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/send_pass_phone_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/send_again"
            style="@style/AppCompatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_again"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen_14sp"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_goneMarginTop="@dimen/dimen_0dp"
            app:layout_constraintBottom_toTopOf="@+id/success_icon_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/send_again_timer_tv" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/password_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BasicMaterialButton"
            android:paddingTop="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_16dp"
            android:text="@string/text_ok"
            android:layout_marginTop="@dimen/dimen_48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/send_again"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>