<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/arrow_bottom_sheet_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_16dp"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        android:src="@drawable/ic_arrow_sheet" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppCompatTextView"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:textAlignment="center"
        android:text="@string/choose_type"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cashbox_type_btn"
        style="@style/BasicOutlinedButtonGrayStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:paddingTop="@dimen/dimen_12dp"
        android:paddingBottom="@dimen/dimen_12dp"
        android:text="@string/kassÃ½"
        app:icon="@drawable/check_toggle_btn_selector"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/paybox_type_btn"
        style="@style/BasicOutlinedButtonGrayStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_12dp"
        android:paddingBottom="@dimen/dimen_12dp"
        android:text="@string/paybox"
        app:icon="@drawable/check_toggle_btn_selector"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bv_type_btn"
        style="@style/BasicOutlinedButtonGrayStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_12dp"
        android:paddingBottom="@dimen/dimen_12dp"
        android:text="@string/bv"
        app:icon="@drawable/check_toggle_btn_selector"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextBtn"
        style="@style/BasicMaterialButton"
        android:layout_marginTop="@dimen/dimen_100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_12dp"
        android:enabled="true"
        android:paddingBottom="@dimen/dimen_12dp"
        android:text="@string/next" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelBtn"
        style="@style/BasicTextMaterialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/text_cancel" />

</LinearLayout>