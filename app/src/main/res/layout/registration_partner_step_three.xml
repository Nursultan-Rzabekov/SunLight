<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sunlight_background">
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp" >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:background="@drawable/ic_sunlightlogo"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_height="wrap_content"/>
    
    
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextView"
                android:text="@string/registration_partner"
                android:layout_marginTop="@dimen/dimen_32dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppCompatTextView"
                    android:text="@string/step_three"
                    android:textSize="@dimen/dimen_16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppCompatTextViewGray"
                    android:text="@string/vybor_tovara"
                    android:textSize="@dimen/dimen_16sp"
                    android:layout_marginStart="@dimen/dimen_13dp"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppCompatTextView"
                android:text="@string/dostypnye_tovary_Ä±z"
                android:textSize="@dimen/dimen_16sp"
                android:layout_marginTop="@dimen/dimen_16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_next_step_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textSize="@dimen/dimen_16sp"
                style="@style/AppCompatTextView"
                android:textAlignment="center"
                android:background="@drawable/light_gray_button"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dimen_24dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/back"
                android:textStyle="normal"
                android:textColor="@color/gray_textColor"
                android:background="@color/transparent"
                style="@style/AppCompatTextView"
                android:textAlignment="center"
                android:textSize="@dimen/dimen_16sp"
                android:layout_marginTop="@dimen/dimen_8dp"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>