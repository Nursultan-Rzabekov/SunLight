<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sunlight_background">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/market_details_linear_top"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textStyle="normal"
            android:textColor="@color/sunLightColor"
            android:background="@color/transparent"
            style="@style/AppCompatTextView"
            android:textAlignment="center"
            android:textSize="@dimen/dimen_16sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search"
            android:layout_gravity="center_vertical"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/market_details_linear_top"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_height="wrap_content">


                <include layout="@layout/registration_partner_step_three_pack_cardview"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:weightSum="5"
                    android:layout_height="@dimen/dimen_50dp">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_weight="2"
                        android:text="@string/buy"
                        android:textStyle="normal"
                        android:textColor="@color/sunLightColor"
                        style="@style/AppCompatTextView"
                        android:textAlignment="center"
                        android:background="@drawable/border_color_sunlight_button"
                        android:layout_height="match_parent"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_weight="1"
                        android:text="@string/buy"
                        android:textStyle="normal"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:textColor="@color/sunLightColor"
                        style="@style/AppCompatTextView"
                        android:textAlignment="center"
                        android:background="@drawable/border_color_sunlight_button"
                        android:layout_height="match_parent"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_weight="1"
                        android:text="@string/buy"
                        android:textStyle="normal"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:textColor="@color/sunLightColor"
                        android:src="@drawable/ic_minus"
                        style="@style/AppCompatTextView"
                        android:textAlignment="center"
                        android:background="@drawable/border_color_sunlight_button"
                        android:layout_height="match_parent"/>


                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_weight="1"
                        android:text="@string/buy"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:textStyle="normal"
                        android:src="@drawable/ic_plus"
                        android:textColor="@color/sunLightColor"
                        style="@style/AppCompatTextView"
                        android:textAlignment="center"
                        android:background="@drawable/border_color_sunlight_button"
                        android:layout_height="match_parent"/>


                </androidx.appcompat.widget.LinearLayoutCompat>


                <View
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_width="match_parent"
                    android:background="@color/gray"
                    android:layout_height="1dp"/>


                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppCompatTextView"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:text="Сквалан с ретинолом 0,5% The Ordinary -Обладает антивозрастным эффектом и улучшает текстуру кожи -Подходит для большинства типов кожи -The Ordinary рекомендуют использовать средства по уходу с низкой концентрацией ретинола, чтобы кожа могла привыкнуть -Может вызывать покраснение, раздражение и шелушение -Внимание: ретиноиды могут повышать чувствительность кожи к УФ-излучению."
                    android:textSize="@dimen/dimen_16sp"
                    android:fontFamily="@font/rubik_bold"
                    android:textColor="@color/gray_textColor"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppCompatTextView"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="Сквалан с ретинолом 0,5% The Ordinary -Обладает антивозрастным эффектом и улучшает текстуру кожи -Подходит для большинства типов кожи -The Ordinary рекомендуют использовать средства по уходу с низкой концентрацией ретинола, чтобы кожа могла привыкнуть -Может вызывать покраснение, раздражение и шелушение -Внимание: ретиноиды могут повышать чувствительность кожи к УФ-излучению."
                    android:textSize="@dimen/dimen_16sp"
                    android:fontFamily="@font/rubik_bold"
                    android:textColor="@color/gray_textColor"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>





    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>