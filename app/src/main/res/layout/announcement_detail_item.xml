<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunlight_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:background="@color/white"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:minHeight="250dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="@dimen/dimen_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fromNameTextView"
                style="@style/AppCompatTextViewGray"
                android:textSize="@dimen/dimen_12sp"
                android:text = "@string/sunlight_mail"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/toNameTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_7dp"
                android:textSize="@dimen/dimen_12sp"
                tools:text = "To: Всем пользователям"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemTitleTextView"
                style="@style/AppCompatTextView"
                android:layout_marginTop="24dp"
                android:textSize="@dimen/dimen_16sp"
                tools:text = "Добрый день дорогой партнер!"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemBodyTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_7dp"
                android:textSize="@dimen/dimen_14sp"
                tools:text = "Hi Kamila,It's been about a month since you signed up for Notion, so I just wanted to check in and see how your experience has been. Anything we can do to make the product better for you? Is there a specific problem you wanted to solve that we can help with? Just reply to let me know.We decide what to build next based on your feedback, so we'd be super grateful for any thoughts.Thanks so much,IvanCo-founder"/>




            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dateTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="24dp"
                android:textSize="13sp"
                tools:text = "02.05.2019 / 17:11"/>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.10"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>