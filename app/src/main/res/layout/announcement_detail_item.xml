<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunlight_background">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fromNameTextView"
                style="@style/AppCompatTextViewGray"
                android:textSize="@dimen/dimen_12sp"
                tools:text="@string/from_mail" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/toNameTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_7dp"
                android:textSize="@dimen/dimen_12sp"
                tools:text="@string/to_mail" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemTitleTextView"
                style="@style/AppCompatTextView"
                android:layout_marginTop="24dp"
                android:textSize="@dimen/dimen_16sp"
                tools:text="Добрый день дорогой партнер!" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemBodyTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_7dp"
                android:textSize="@dimen/dimen_14sp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                tools:text="Hello, World"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/filesRecyclerView"
                tools:itemCount="1"
                tools:listitem="@layout/attached_file_recycler_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dateTextView"
                style="@style/AppCompatTextViewGray"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/dimen_12dp"
                tools:text="02.05.2019 / 17:11" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10" />

</androidx.constraintlayout.widget.ConstraintLayout>