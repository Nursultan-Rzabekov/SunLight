<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:contentPadding="@dimen/dimen_16dp"
    app:cardCornerRadius="@dimen/dimen_5dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/dimen_0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bv_balance_tv"
            style="@style/AppCompatTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_18sp"
            android:text="@string/in_balance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/bv_balance_amount_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppCompatTextViewGray"
            android:textSize="32sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/bv_balance_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/amount_bv"
            />

        <LinearLayout
            android:id="@+id/incomeAndOutcomeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bv_balance_amount_tv">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/AppCompatTextViewGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_14sp"
                    android:text="@string/income"/>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppCompatTextViewGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:drawableStart="@drawable/ic_income_growth"
                    android:drawablePadding="@dimen/dimen_4dp"
                    android:textColor="@color/sunBlackColor"
                    android:textSize="@dimen/dimen_16sp"
                    tools:text="@string/income_amount_bv"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider"
                android:layout_marginStart="@dimen/dimen_24dp"
                android:layout_marginEnd="@dimen/dimen_24dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/AppCompatTextViewGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_14sp"
                    android:text="@string/consumption"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/bv_balance_consumption"
                    style="@style/AppCompatTextViewGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:drawableStart="@drawable/ic_consumption_growth"
                    android:drawablePadding="@dimen/dimen_4dp"
                    android:textColor="@color/sunBlackColor"
                    android:textSize="@dimen/dimen_16sp"
                    tools:text="@string/income_amount_bv"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>