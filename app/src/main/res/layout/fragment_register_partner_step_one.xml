<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunlight_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:orientation="vertical">

            <include
                layout="@layout/sunlight_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_gravity="center_horizontal" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/registration_partner" />

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppCompatTextView"
                    android:text="@string/step_one"
                    android:textSize="@dimen/dimen_16sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppCompatTextViewGray"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:text="@string/personal_data"
                    android:textSize="@dimen/dimen_16sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/indicate_your_sponsor"
                android:textSize="@dimen/dimen_16sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/sponsor_name_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkedButton="@id/sponsor_itself_rbtn"
                    android:orientation="vertical"
                    android:paddingStart="-5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/sponsor_itself_rbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/sponsor_other_rbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RadioGroup>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/sponsor_name_group"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/AppCompatTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textStyle="normal"
                        android:gravity="center_vertical"
                        android:text="@string/me_"
                        android:textSize="@dimen/dimen_16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sponsor_name_drop_down"
                        style="@style/BasicDropDownInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:endIconCheckable="false"
                        app:hintEnabled="false">

                        <AutoCompleteTextView
                            android:id="@+id/sponsor_name_tv"
                            style="@style/AppCompatTextViewGray"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="@string/search_iin_or"
                            android:labelFor="@id/sponsor_name_drop_down"
                            android:paddingTop="@dimen/dimen_12dp"
                            android:paddingBottom="@dimen/dimen_12dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/partner"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/BasicTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/partnerLastNameEditText"
                    style="@style/BasicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/last_name"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/BasicTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/partnerFirstNameEditText"
                    style="@style/BasicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/first_name"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/BasicTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/partnerMiddleNameEditText"
                    style="@style/BasicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/middle_name"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/enter_iin"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/BasicTextInputLayout"
                android:id="@+id/iinLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:errorEnabled="false"
                app:errorTextColor="@color/red"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/iin_et"
                    style="@style/BasicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp" />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/phone_number_two_dots"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneLayout"
                style="@style/BasicTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone_et"
                    style="@style/BasicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone_hint"
                    android:inputType="phone"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/choose_country_two_dots"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/countryTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_12dp"
                android:textColorHint="@color/gray"
                android:background="@drawable/white_bordered_box"
                android:hint="@string/choose_country_two_dots"
                app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/choose_region_two_dots"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/regionsTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_12dp"
                android:textColorHint="@color/gray"
                android:background="@drawable/white_bordered_box"
                android:hint="@string/choose_region_two_dots"
                app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down" />

<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                android:id="@+id/region_drop_down"-->
<!--                style="@style/BasicDropDownInputLayout"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="@dimen/dimen_16dp"-->
<!--                app:hintEnabled="false">-->

<!--                <AutoCompleteTextView-->
<!--                    android:id="@+id/region_drop_down_tv"-->
<!--                    style="@style/AppCompatTextViewGray"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:enabled="false"-->
<!--                    android:hint="@string/choose_region_two_dots"-->
<!--                    android:inputType="none"-->
<!--                    android:labelFor="@id/region_drop_down"-->
<!--                    android:paddingTop="@dimen/dimen_12dp"-->
<!--                    android:paddingBottom="@dimen/dimen_12dp" />-->

<!--            </com.google.android.material.textfield.TextInputLayout>-->

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/choose_city_two_dots"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/citiesTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_12dp"
                android:textColorHint="@color/gray"
                android:background="@drawable/white_bordered_box"
                android:hint="@string/choose_city_two_dots"
                app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down" />

<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                android:id="@+id/city_drop_down"-->
<!--                style="@style/BasicDropDownInputLayout"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="@dimen/dimen_16dp"-->
<!--                app:hintEnabled="false">-->

<!--                <AutoCompleteTextView-->
<!--                    android:id="@+id/city_drop_down_tv"-->
<!--                    style="@style/AppCompatTextViewGray"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:enabled="false"-->
<!--                    android:hint="@string/choose_city_two_dots"-->
<!--                    android:inputType="none"-->
<!--                    android:labelFor="@id/city_drop_down"-->
<!--                    android:paddingTop="@dimen/dimen_12dp"-->
<!--                    android:paddingBottom="@dimen/dimen_12dp" />-->

<!--            </com.google.android.material.textfield.TextInputLayout>-->

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/choose_legs"
                android:textSize="@dimen/dimen_16sp" />

            <RadioGroup
                android:id="@+id/choose_side_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:checkedButton="@id/left_side_rbtn"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/left_side_rbtn"
                    style="@style/AppCompatTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_32dp"
                    android:paddingEnd="@dimen/dimen_0dp"
                    android:paddingStart="@dimen/dimen_0dp"
                    android:text="@string/left"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="normal" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/right_side_rbtn"
                    style="@style/AppCompatTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_32dp"
                    android:paddingEnd="@dimen/dimen_0dp"
                    android:paddingStart="@dimen/dimen_0dp"
                    android:text="@string/right"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="normal" />

            </RadioGroup>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/upload_documents"
                android:textColor="@color/sunBlackColor"
                android:textSize="@dimen/dimen_14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/attach_document_btn"
                style="@style/BasicOutlinedMaterialButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:paddingTop="@dimen/dimen_16dp"
                android:paddingBottom="@dimen/dimen_16dp"
                android:text="@string/attach_file"
                app:icon="@drawable/ic_attach_file"
                app:iconTint="@color/gray_DA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/document_rear_side_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:background="@drawable/card_border_gray_da"
                    android:padding="@dimen/dimen_16dp"
                    android:visibility="gone">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/document_rear_side_iv_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/dimen_5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/document_rear_side_iv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/upload_documents"
                            tools:src="@drawable/test_document" />

                    </com.google.android.material.card.MaterialCardView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/document_rear_side_name_tv"
                        style="@style/AppCompatTextViewGray"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:layout_marginEnd="@dimen/dimen_16dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textSize="@dimen/dimen_14sp"
                        app:layout_constraintEnd_toStartOf="@id/document_rear_side_remove_tv"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/document_rear_side_iv_container"
                        tools:text="document.jpg" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/document_rear_side_size_tv"
                        style="@style/AppCompatTextViewGray"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/dimen_12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/document_rear_side_name_tv"
                        tools:text="16 MB" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/document_rear_side_remove_tv"
                        style="@style/AppCompatTextViewGray"
                        android:text="@string/delete"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen_14sp"
                        app:layout_constraintBottom_toTopOf="@id/document_rear_side_size_tv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/document_rear_side_name_tv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/document_back_side_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_border_gray_da"
                    android:padding="@dimen/dimen_16dp"
                    android:visibility="gone">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/document_back_side_iv_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/dimen_5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/document_back_side_iv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/upload_documents"
                            tools:src="@drawable/test_document" />

                    </com.google.android.material.card.MaterialCardView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/document_back_side_name_tv"
                        style="@style/AppCompatTextViewGray"
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:layout_marginEnd="@dimen/dimen_16dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textSize="@dimen/dimen_14sp"
                        app:layout_constraintEnd_toStartOf="@id/document_back_side_remove_tv"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/document_back_side_iv_container"
                        tools:text="document.jpg" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/document_back_side_size_tv"
                        style="@style/AppCompatTextViewGray"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/dimen_12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/document_back_side_name_tv"
                        tools:text="16 MB" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/document_back_side_remove_tv"
                        style="@style/AppCompatTextViewGray"
                        android:text="@string/delete"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen_14sp"
                        app:layout_constraintBottom_toTopOf="@id/document_back_side_size_tv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/document_back_side_name_tv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_next_step_one"
                style="@style/BasicMaterialButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:paddingTop="@dimen/dimen_16dp"
                android:paddingBottom="@dimen/dimen_16dp"
                android:text="@string/next"
                android:textSize="@dimen/dimen_16sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>