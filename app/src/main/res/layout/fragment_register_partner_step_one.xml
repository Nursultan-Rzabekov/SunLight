<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/sunlight_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:orientation="vertical">

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/sunlight_logo"
                android:layout_gravity="center_horizontal"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/registration_partner" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppCompatTextView"
                    android:layout_marginTop="@dimen/dimen_32dp"
                    android:text="@string/step_one"
                    android:textSize="@dimen/dimen_16sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppCompatTextViewGray"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_32dp"
                    android:text="@string/personal_data"
                    android:textSize="@dimen/dimen_16sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/indicate_your_sponsor"
                android:textSize="@dimen/dimen_16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppCompatTextView"
                    android:text="@string/me_"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/dimen_16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/BasicTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/BasicEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/search_iin_or"
                        android:paddingTop="@dimen/dimen_12dp"
                        android:paddingBottom="@dimen/dimen_12dp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/partner"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/BasicTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/BasicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/fullName_partner"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/enter_iin"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/BasicTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/iin_et"
                    style="@style/BasicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp" />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/phone_number"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/BasicTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone_et"
                    style="@style/BasicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone_hint"
                    android:inputType="phone"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/choose_country"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/country_drop_down"
                style="@style/BasicDropDownInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/country_drop_down_tv"
                    style="@style/AppCompatTextViewGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:enabled="false"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp"
                    android:hint="@string/choose_country"
                    android:labelFor="@id/country_drop_down"/>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/choose_region"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/region_drop_down"
                style="@style/BasicDropDownInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/region_drop_down_tv"
                    style="@style/AppCompatTextViewGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:enabled="false"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp"
                    android:hint="@string/choose_region"
                    android:labelFor="@id/region_drop_down"/>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/choose_city"
                android:textSize="@dimen/dimen_16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/city_drop_down"
                style="@style/BasicDropDownInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/city_drop_down_tv"
                    style="@style/AppCompatTextViewGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:enabled="false"
                    android:paddingTop="@dimen/dimen_12dp"
                    android:paddingBottom="@dimen/dimen_12dp"
                    android:hint="@string/choose_city"
                    android:labelFor="@id/city_drop_down"/>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/choose_legs"
                android:textSize="@dimen/dimen_16sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppCompatTextView"
                    android:paddingStart="@dimen/dimen_16dp"
                    android:paddingEnd="@dimen/dimen_0dp"
                    android:layout_marginEnd="@dimen/dimen_32dp"
                    android:textStyle="normal"
                    android:textSize="@dimen/dimen_16sp"
                    android:text="@string/left"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppCompatTextView"
                    android:paddingStart="@dimen/dimen_16dp"
                    android:paddingEnd="@dimen/dimen_0dp"
                    android:layout_marginEnd="@dimen/dimen_32dp"
                    android:textStyle="normal"
                    android:textSize="@dimen/dimen_16sp"
                    android:text="@string/right"/>

            </RadioGroup>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/upload_documents"
                android:textColor="@color/sunBlackColor"
                android:textSize="@dimen/dimen_14sp" />


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppCompatTextViewGray"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/requirements_documents"
                android:textSize="@dimen/dimen_9sp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BasicOutlinedMaterialButton"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:paddingTop="@dimen/dimen_16dp"
                android:paddingBottom="@dimen/dimen_16dp"
                android:text="@string/attach_file"
                app:icon="@drawable/ic_attach_file"
                app:iconTint="@color/gray_DA"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/document_rear_side_card"
                    android:padding="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:background="@drawable/card_border_gray_da"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/document_rear_side_iv_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/dimen_5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:contentDescription="@string/upload_documents"
                            android:id="@+id/document_rear_side_iv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            tools:src="@drawable/test_document"/>

                    </com.google.android.material.card.MaterialCardView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/document_rear_side_name_tv"
                        style="@style/AppCompatTextViewGray"
                        android:textSize="@dimen/dimen_14sp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@id/document_rear_side_iv_container"
                        app:layout_constraintEnd_toStartOf="@id/document_rear_side_remove_tv"
                        tools:text="document.jpg"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/document_rear_side_size_tv"
                        style="@style/AppCompatTextViewGray"
                        android:textSize="@dimen/dimen_12sp"
                        android:textColor="@color/light_gray"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        app:layout_constraintTop_toBottomOf="@id/document_rear_side_name_tv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:text="16 MB"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/document_rear_side_remove_tv"
                        style="@style/AppCompatTextViewGray"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen_14sp"
                        android:text="@string/delete"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/document_rear_side_name_tv"
                        app:layout_constraintBottom_toTopOf="@id/document_rear_side_size_tv"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/document_back_side_card"
                    android:padding="@dimen/dimen_16dp"
                    android:background="@drawable/card_border_gray_da"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/document_back_side_iv_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/dimen_5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:contentDescription="@string/upload_documents"
                            android:id="@+id/document_back_side_iv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/test_document"/>

                    </com.google.android.material.card.MaterialCardView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/document_back_side_name_tv"
                        style="@style/AppCompatTextViewGray"
                        android:textSize="@dimen/dimen_14sp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@id/document_back_side_iv_container"
                        app:layout_constraintEnd_toStartOf="@id/document_back_side_remove_tv"
                        tools:text="document.jpg"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/document_back_side_size_tv"
                        style="@style/AppCompatTextViewGray"
                        android:textSize="@dimen/dimen_12sp"
                        android:textColor="@color/light_gray"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        app:layout_constraintTop_toBottomOf="@id/document_back_side_name_tv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:text="16 MB"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/document_back_side_remove_tv"
                        style="@style/AppCompatTextViewGray"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen_14sp"
                        android:text="@string/delete"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/document_back_side_name_tv"
                        app:layout_constraintBottom_toTopOf="@id/document_back_side_size_tv"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_next_step_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_16dp"
                android:paddingBottom="@dimen/dimen_16dp"
                style="@style/BasicMaterialButton"
                android:textSize="@dimen/dimen_16sp"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/next" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.10"
        android:visibility="gone"
        />


</androidx.constraintlayout.widget.ConstraintLayout>