<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemViewConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginStart="@dimen/dimen_16dp"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:layout_marginEnd="@dimen/dimen_16dp"
    android:background="@drawable/announcement_item_shape_unread">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_12dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dataTextView"
            style="@style/AppCompatTextViewGray"
            android:textSize="@dimen/dimen_12sp"
            tools:text="02.05.2019 / 17:11" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/messageTitleTextView"
            style="@style/AppCompatTextView"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:textSize="@dimen/dimen_12sp"
            tools:text="Всем пользователям" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/messageBodyTextView"
            style="@style/AppCompatTextViewGray"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:textSize="@dimen/dimen_12sp"
            tools:text="Добрый день дорогой партнер GTC ! Хотим напомнить что 11-12 мая... " />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>