<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sunlight_background">
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:orientation="vertical">
            
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/registration_partner_step_two_sunlight_logo_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sunlightlogo"
                android:layout_marginTop="@dimen/dimen_8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/registration_partner_step_two_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/registration_partner"
                style="@style/AppCompatTextView"
                android:layout_marginTop="@dimen/dimen_45dp"
                app:layout_constraintTop_toBottomOf="@id/registration_partner_step_two_sunlight_logo_iv"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/registration_partner_step_two_shag_two_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shag_two"
                style="@style/AppCompatTextView"
                android:textSize="@dimen/dimen_16sp"
                android:layout_marginTop="@dimen/dimen_12dp"
                app:layout_constraintTop_toBottomOf="@id/registration_partner_step_two_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/registration_partner_step_two_vybor_paketa_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vybor_paketa"
                android:textSize="@dimen/dimen_16sp"
                style="@style/AppCompatTextView"
                android:textStyle="normal"
                android:textColor="@color/gray_textColor"
                android:layout_marginStart="@dimen/dimen_13dp"
                app:layout_constraintTop_toTopOf="@id/registration_partner_step_two_shag_two_tv"
                app:layout_constraintBottom_toBottomOf="@id/registration_partner_step_two_shag_two_tv"
                app:layout_constraintStart_toEndOf="@id/registration_partner_step_two_shag_two_tv"/>


            <include layout="@layout/registration_partner_step_two_pack_cardview"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/registration_partner_step_two_packs_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_32dp"
                app:layout_constraintTop_toBottomOf="@id/registration_partner_step_two_shag_two_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registration_partner_step_two_next_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textSize="@dimen/dimen_16sp"
                style="@style/AppCompatTextView"
                android:textAlignment="center"
                android:background="@drawable/light_gray_button"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dimen_24dp"
                app:layout_constraintTop_toBottomOf="@id/registration_partner_step_two_packs_rv"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/back"
                android:textStyle="normal"
                android:textColor="@color/gray_textColor"
                android:background="@color/transparent"
                style="@style/AppCompatTextView"
                android:textAlignment="center"
                android:textSize="@dimen/dimen_16sp"
                android:layout_marginTop="@dimen/dimen_8dp"
                app:layout_constraintTop_toBottomOf="@id/registration_partner_step_two_next_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>