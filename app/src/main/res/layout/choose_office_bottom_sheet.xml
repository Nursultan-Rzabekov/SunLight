<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_16dp"
    android:paddingEnd="@dimen/dimen_16dp">

    <ImageView
        android:id="@+id/arrow_bottom_sheet_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_16dp"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        android:src="@drawable/ic_arrow_sheet" />

    <TextView
        style="@style/AppCompatTextViewGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_office"
        android:textAlignment="center"
        android:textColor="@color/sunBlackColor"
        android:textSize="@dimen/dimen_18sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/officeDropDown"
        style="@style/BasicDropDownInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:visibility="gone"
        app:boxBackgroundColor="@color/gray_EF"
        app:hintEnabled="false">

        <AutoCompleteTextView
            android:id="@+id/officeDropDownTextView"
            style="@style/AppCompatTextViewGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="@string/office_name"
            android:inputType="none"
            android:labelFor="@id/country_drop_down"
            android:paddingTop="@dimen/dimen_12dp"
            android:paddingBottom="@dimen/dimen_12dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/officesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        tools:itemCount="2"
        android:layout_weight="1"
        tools:listitem="@layout/office_departments_item" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextBtn"
        style="@style/BasicMaterialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_16dp"
        android:textStyle="bold"
        android:enabled="false"
        android:paddingBottom="@dimen/dimen_16dp"
        android:text="@string/next" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelBtn"
        style="@style/BasicTextMaterialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:text="@string/text_cancel" />

</LinearLayout>