<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sunlight_background">
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_transparent_gray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/sunlight_background">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle_40"
                android:layout_margin="@dimen/dimen_16dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nazvanıe_ofısa"
                    style="@style/AppCompatTextView"
                    android:textSize="@dimen/dimen_16sp"
                    android:fontFamily="@font/rubik_bold"
                    android:layout_marginTop="@dimen/dimen_18dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppCompatTextViewGray"
                    android:text="@string/phone_number_step_four_cardview"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:textSize="@dimen/dimen_14sp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/street_step_four_cardview"
                    style="@style/AppCompatTextViewGray"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:textSize="@dimen/dimen_14sp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/working_hours_step_four_cardview"
                    style="@style/AppCompatTextViewGray"
                    android:textSize="@dimen/dimen_14sp"
                    android:layout_marginTop="@dimen/dimen_8dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>