<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_32dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCardView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="@dimen/dimen_5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/info_product"
            tools:src="@drawable/product_test" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/orderNameTextView"
        style="@style/AppCompatTextView"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/dimen_14sp"
        android:maxLines="8"
        android:layout_width="@dimen/dimen_0dp"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/dimen_12dp"
        app:layout_constraintEnd_toStartOf="@+id/bvTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageCardView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Набор clinuqu" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/countTextView"
        style="@style/AppCompatTextViewGray"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintStart_toEndOf="@+id/imageCardView"
        app:layout_constraintTop_toBottomOf="@+id/orderNameTextView"
        tools:text="Количество : 1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bvTextView"
        style="@style/AppCompatTextView"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="990 BV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/statusTextView"
        style="@style/AppCompatTextViewGray"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintStart_toEndOf="@+id/imageCardView"
        app:layout_constraintTop_toBottomOf="@+id/countTextView"
        tools:text="@string/status_format" />

</androidx.constraintlayout.widget.ConstraintLayout>