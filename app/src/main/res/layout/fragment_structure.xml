<!--                        </TableRow>-->

                    </TableLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/statusesLayout"
                style="@style/BaseCardView"
                app:cardElevation="@dimen/dimen_0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/statusesHeaderTextView"
                        style="@style/AppCompatTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginVertical="@dimen/dimen_16dp"
                        tools:text="@string/changes_in_statuses"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/dimen_18sp" />

                    <TextView
                        style="@style/AppCompatTextViewGray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:text="@string/status_changes_users"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/dimen_14sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/userStatusesRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        tools:listitem="@layout/user_status_item"
                        tools:itemCount="5" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.10"
        android:visibility="invisible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>