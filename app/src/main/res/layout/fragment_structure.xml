<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunlight_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dimen_16dp">

            <androidx.cardview.widget.CardView
                style="@style/BaseCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white">

                <TextView
                    android:id="@+id/showTreeTextView"
                    style="@style/AppCompatTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_16dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dimen_16dp"
                    android:paddingVertical="@dimen/dimen_12dp"
                    android:text="@string/structure"
                    android:textSize="@dimen/dimen_16sp"
                    app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right"
                    app:drawableStartCompat="@drawable/ic_structure_icon" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/BaseCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:cardElevation="@dimen/dimen_0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/AppCompatTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:layout_marginVertical="@dimen/dimen_16dp"
                        android:text="@string/structure_status"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/dimen_18sp" />

                    <TextView
                        style="@style/AppCompatTextViewGray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_16dp"
                        android:text="@string/count_of_people_in_status"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/dimen_14sp" />

                    <TableLayout
                        android:id="@+id/structureInfoTableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16dp">

