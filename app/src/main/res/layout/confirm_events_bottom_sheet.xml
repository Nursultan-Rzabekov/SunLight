<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/arrow_bottom_sheet_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_16dp"
            android:src="@drawable/ic_arrow_sheet" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/repeatOrdersSheetTextView"
            style="@style/AppCompatTextView"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:text="@string/confirm_info"
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/countOrderTextView"
            style="@style/AppCompatTextView"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            tools:text="@string/choose_one_event"
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="normal" />


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/AppCompatTextViewGray"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:text="@string/are_u_sure_continue"
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="normal" />


        <include
            layout="@layout/new_events_market_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="@dimen/dimen_16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_all_right"
            style="@style/BasicMaterialButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_16dp"
            android:text="@string/confirm_payment"
            android:textSize="@dimen/dimen_16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_btn"
            style="@style/BasicTextMaterialButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:gravity="center"
            android:text="@string/back"
            android:textAlignment="center"
            android:textColor="@color/gray_textColor" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>