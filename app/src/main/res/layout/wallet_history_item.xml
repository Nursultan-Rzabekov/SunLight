<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/walletHistoryLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/typeOfTransactionImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="@id/accountTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/typeOfTransactionTextView"
        tools:src="@drawable/ic_income" />

    <TextView
        android:id="@+id/typeOfTransactionTextView"
        style="@style/AppCompatTextViewGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:textColor="@color/sunBlackColor"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintStart_toEndOf="@id/typeOfTransactionImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="asdas" />

    <TextView
        android:id="@+id/accountTextView"
        style="@style/AppCompatTextViewGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintStart_toStartOf="@id/typeOfTransactionTextView"
        app:layout_constraintTop_toBottomOf="@+id/typeOfTransactionTextView"
        tools:text="asdads" />

    <TextView
        android:id="@+id/dateOfTransactionTextView"
        style="@style/AppCompatTextViewGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintEnd_toStartOf="@id/expandImageView"
        app:layout_constraintTop_toTopOf="@id/typeOfTransactionTextView"
        tools:text="22.22.2020" />

    <TextView
        android:id="@+id/amountTextView"
        style="@style/AppCompatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintBottom_toBottomOf="@id/accountTextView"
        app:layout_constraintEnd_toStartOf="@id/expandImageView"
        app:layout_constraintTop_toBottomOf="@id/dateOfTransactionTextView"
        tools:text="-1000 BV" />

    <ImageView
        android:id="@+id/expandImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:contentDescription="@string/more_info"
        android:src="@drawable/ic_baseline_keyboard_arrow_down"
        app:layout_constraintBottom_toBottomOf="@id/amountTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/dateOfTransactionTextView"
        app:layout_constraintVertical_bias="0.555" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@color/gray_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accountTextView" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray_F9"
        app:layout_constraintBottom_toBottomOf="@id/additionalInfoLayout"
        app:layout_constraintEnd_toStartOf="@id/additionalInfoLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider4" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray_F9"
        app:layout_constraintBottom_toBottomOf="@id/additionalInfoLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/additionalInfoLayout"
        app:layout_constraintTop_toBottomOf="@id/divider4" />

    <LinearLayout
        android:id="@+id/additionalInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/gray_F9"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_16dp"
        android:paddingBottom="@dimen/dimen_16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/amountTextView"
        app:layout_constraintStart_toStartOf="@id/typeOfTransactionTextView"
        app:layout_constraintTop_toBottomOf="@id/divider4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AppCompatTextViewGray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/create_date"
                android:textColor="@color/sunBlackColor"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/createDateTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/dimen_14sp"
                tools:text="asdasd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/AppCompatTextViewGray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bonuses"
                android:textColor="@color/sunBlackColor"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/bonusesTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/dimen_14sp"
                tools:text="asdasd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/AppCompatTextViewGray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/wallet"
                android:textColor="@color/sunBlackColor"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/walletTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/dimen_14sp"
                tools:text="asdasd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/AppCompatTextViewGray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/description"
                android:textColor="@color/sunBlackColor"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/nameTextView"
                style="@style/AppCompatTextViewGray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/dimen_14sp"
                tools:text="asdasd" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>