<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dimen_10dp"
    android:layout_height="@dimen/dimen_350dp">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/success_icon"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_success_check_box"
            android:layout_marginTop="@dimen/dimen_80dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/error_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_error_check_box"
            android:layout_marginTop="@dimen/dimen_80dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/AppCompatTextViewGray"
            android:layout_gravity="center_horizontal"
            android:text="@string/thanks_register"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/sunBlackColor"
            />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/AppCompatTextViewGray"
            android:layout_gravity="center_horizontal"
            android:text="@string/dialog_temporary"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/gray_textColor"
            />


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/AppCompatTextViewGray"
            android:layout_gravity="center_horizontal"
            android:text="@string/send_again_after"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/sunBlackColor"
            />


        <androidx.appcompat.widget.AppCompatButton
            style="@style/AppCompatButton"
            android:layout_width="match_parent"
            android:text="@string/ok"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            />




    </androidx.appcompat.widget.LinearLayoutCompat>












</com.google.android.material.card.MaterialCardView>