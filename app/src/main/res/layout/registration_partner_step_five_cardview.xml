<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sunlight_background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/pack_cardview_shape"
        android:layout_marginTop="@dimen/dimen_32dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vvedıte_dannye_karty"
                style="@style/AppCompatTextViewGray"
                android:fontFamily="@font/rubik_bold"
                android:textSize="@dimen/dimen_16sp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/imıa_na_karte"
                android:textSize="@dimen/dimen_14sp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_24dp"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:paddingStart="@dimen/dimen_24dp"
                android:background="@drawable/rounded_border_edit_text_step_five_bg"
                android:hint="@string/vashe_ımıa_na_karte"
                android:textSize="@dimen/dimen_16sp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_11dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:background="@drawable/rounded_border_transparent_gray"
                android:layout_marginBottom="@dimen/dimen_16dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_vias_mastercard"
                    android:layout_marginTop="@dimen/dimen_17dp"
                    android:layout_marginEnd="@dimen/dimen_40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/registration_partner_step_five_lable_vvedıte_nomer_karty_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vvedıte_nomer_karty"
                    android:textSize="@dimen/dimen_14sp"
                    style="@style/AppCompatTextViewGray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:layout_marginStart="@dimen/dimen_24dp"
                    android:labelFor="@id/registration_partner_step_five_nomer_karty_et"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/registration_partner_step_five_nomer_karty_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:hint="@string/hint_stars_for_card_nomber"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@drawable/rounded_border_edit_text_step_five_bg"
                    app:layout_constraintTop_toBottomOf="@id/registration_partner_step_five_lable_vvedıte_nomer_karty_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingStart="@dimen/dimen_24dp"
                    android:layout_marginStart="@dimen/dimen_24dp"
                    android:layout_marginEnd="@dimen/dimen_24dp"
                    android:layout_marginTop="@dimen/dimen_12dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/registration_partner_step_five_karta_deistvitelna_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/karta_deıstvıtelna"
                    style="@style/AppCompatTextViewGray"
                    android:textSize="@dimen/dimen_14sp"
                    app:layout_constraintTop_toBottomOf="@id/registration_partner_step_five_nomer_karty_et"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/dimen_24dp"
                    android:layout_marginTop="@dimen/dimen_24dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/registration_partner_step_five_cvv_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cvv_code"
                    style="@style/AppCompatTextViewGray"
                    android:textSize="@dimen/dimen_14sp"
                    app:layout_constraintTop_toTopOf="@id/registration_partner_step_five_karta_deistvitelna_tv"
                    app:layout_constraintStart_toEndOf="@id/registration_partner_step_five_karta_deistvitelna_tv"
                    android:layout_marginStart="@dimen/dimen_45dp"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/registration_partner_step_five_card_month_et"
                    android:layout_width="@dimen/dimen_70dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:hint="@string/mm_string"
                    android:gravity="center"
                    android:background="@drawable/rounded_border_edit_text_step_five_bg"
                    app:layout_constraintStart_toStartOf="@id/registration_partner_step_five_karta_deistvitelna_tv"
                    app:layout_constraintTop_toBottomOf="@id/registration_partner_step_five_karta_deistvitelna_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:layout_marginBottom="@dimen/dimen_24dp" />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/registration_partner_step_five_card_year_et"
                    android:layout_width="@dimen/dimen_70dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:hint="@string/yy_string"
                    android:gravity="center"
                    android:background="@drawable/rounded_border_edit_text_step_five_bg"
                    app:layout_constraintTop_toTopOf="@id/registration_partner_step_five_card_month_et"
                    app:layout_constraintStart_toEndOf="@id/registration_partner_step_five_card_month_et"
                    android:layout_marginStart="@dimen/dimen_16dp"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/registration_partner_step_five_card_cvv_code_et"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:hint="@string/cvv_string"
                    android:background="@drawable/rounded_border_edit_text_step_five_bg"
                    app:layout_constraintTop_toTopOf="@id/registration_partner_step_five_card_year_et"
                    app:layout_constraintStart_toStartOf="@id/registration_partner_step_five_cvv_code_tv"
                    android:gravity="center"/>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>