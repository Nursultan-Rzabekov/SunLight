<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunlight_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/toolbar_with_back" />

        <include
            android:id="@+id/goToMarketEventLayout"
            layout="@layout/go_to_event"
            android:layout_margin="@dimen/dimen_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarMarket" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/no_event_iv"
            tools:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_fail_grey"
            android:layout_marginTop="@dimen/dimen_45dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/no_event_tv"
            android:visibility="gone"
            tools:visibility="visible"
            style="@style/AppCompatTextView"
            android:layout_margin="@dimen/dimen_16dp"
            android:text="@string/no_participate_event"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:textSize="@dimen/dimen_22sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/no_event_desc_tv"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            tools:visibility="visible"
            style="@style/AppCompatTextViewGray"
            android:text="@string/event_hint"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:textSize="@dimen/dimen_16sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ticketRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            tools:itemCount="6"
            tools:visibility="gone"
            tools:listitem="@layout/order_item" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/ordersProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>