<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_margin="@dimen/dimen_16dp"
        android:id="@+id/arrow_bottom_sheet_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_arrow_sheet"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/repeatOrdersSheetTextView"
        android:layout_marginStart="@dimen/dimen_16dp"
        style="@style/AppCompatTextView"
        android:layout_gravity="center"
        android:textStyle="normal"
        android:layout_marginTop="@dimen/dimen_24dp"
        tools:text="@string/repeat_orders"
        android:textSize="@dimen/dimen_18sp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/countOrderTextView"
        android:layout_marginStart="@dimen/dimen_16dp"
        style="@style/AppCompatTextView"
        android:layout_gravity="center"
        android:textStyle="normal"
        tools:text="@string/сount_order"
        android:textSize="@dimen/dimen_18sp"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/amountOrderTextView"
        android:layout_marginStart="@dimen/dimen_16dp"
        style="@style/AppCompatTextView"
        android:layout_gravity="center"
        android:textStyle="normal"
        tools:text="@string/totalAmountOrders"
        android:textSize="@dimen/dimen_18sp"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        style="@style/AppCompatTextViewGray"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="normal"
        tools:text="Убедитесь все ли верно, \n чтобы продолжить"
        android:textSize="@dimen/dimen_18sp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/repeatRecyclerView"
        android:layout_margin="@dimen/dimen_16dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/product_sheet_item"
        tools:itemCount="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:id="@+id/btn_all_right"
        style="@style/BasicMaterialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:paddingTop="@dimen/dimen_16dp"
        android:paddingBottom="@dimen/dimen_16dp"
        android:text="@string/all_right"
        android:textSize="@dimen/dimen_16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimen_16dp"
        android:layout_height="wrap_content"
        android:text="@string/text_cancel"
        android:textAlignment="center"
        android:textColor="@color/gray_textColor"
        style="@style/BasicTextMaterialButton"
        android:gravity="center_horizontal"/>

</LinearLayout>